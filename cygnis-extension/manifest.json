{
  "manifest_version": 3,
  "name": "CygnisAI - Mini Chat",
  "description": "Accédez à CygnisAI en un clic depuis Chrome.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting"]
}
